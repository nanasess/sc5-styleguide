{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "noImplicitAny": false,
    "allowJs": true,
    "outDir": "./lib/dist/js",
    "lib": ["es2015", "dom"],
    "skipLibCheck": true
  },
  "include": [
    "lib/app/js-ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "bower_components"
  ]
}
